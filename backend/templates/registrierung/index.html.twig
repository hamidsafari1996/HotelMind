{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8 mt-10">
        <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md border border-gray-200">
        
        
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Registrierung</h2>
        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                <p>{{ message }}</p>
            </div>
        {% endfor %}
        {{ form_start(registerForm, {'attr': {'class': 'space-y-6'}}) }}
            <div class="space-y-4">
                <div>
                    {{ form_label(registerForm.username, 'Benutzername', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registerForm.username, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Benutzername eingeben'}}) }}
                    {{ form_errors(registerForm.username, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>
                
                <div class="mb-4">
                    {{ form_label(registerForm.password.first, 'Passwort', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registerForm.password.first, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Passwort eingeben'}}) }}
                    {{ form_errors(registerForm.password.first, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>
                
                <div>
                    {{ form_label(registerForm.password.second, 'Passwort wiederholen', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registerForm.password.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Passwort wiederholen'}}) }}
                    {{ form_errors(registerForm.password.second, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>
            </div>
            
            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out cursor-pointer">
                    Registrieren
                </button>
            </div>
            
            <div class="text-sm text-center mt-6 text-gray-600">
                <p class="mb-4">Mit der Registrierung akzeptieren Sie unsere Nutzungsbedingungen.</p>
                
                <a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-800 font-medium">
                    Bereits registriert? Hier anmelden
                </a>
            </div>
        {{ form_end(registerForm) }}
    </div>
</div>
{% endblock %}